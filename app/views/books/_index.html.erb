<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <!--本のタイトル、本詳細ページ(show)へのリンク-->
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>

        <!--いいね機能ajax-partial-->
　    　<td id="favorite_buttons_<%= book.id %>">
        <%= render'favorites/favorite', book: book %></th>
        <td>コメント数：<span id = "comment_count"> <%= book.book_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>